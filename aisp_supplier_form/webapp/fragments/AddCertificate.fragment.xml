<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Add New Certificate"
        contentWidth="400px"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <Label
                    text="Certificate Name"
                    required="true"
                />
                <Input
                    id="certificateNameInput"
                    placeholder="Enter certificate name"
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Add"
                press="_onAddCertificateSubmit"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="_onAddCertificateCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>